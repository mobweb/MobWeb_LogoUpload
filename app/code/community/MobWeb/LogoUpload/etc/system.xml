<?xml version="1.0"?>
<config>
    <sections>
        <design>
            <groups>
                <header>
                    <fields>
                        <logo_upload translate="label">
                            <label>Logo Image (Upload to replace Src)</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">mobweb_logoupload</upload_dir>
                            <base_url type="media" scope_info="1">mobweb_logoupload</base_url>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logo_upload>
                        <logo_small_upload translate="label">
                            <label>Small Logo Image (Upload to replace Src)</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">mobweb_logoupload</upload_dir>
                            <base_url type="media" scope_info="1">mobweb_logoupload</base_url>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logo_small_upload>
                    </fields>
                </header>
            </groups>
        </design>
    </sections>
</config>